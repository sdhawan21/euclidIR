import numpy as np
import matplotlib.pyplot as plt
import sncosmo

from simlc import simlc 

class lcfit:
	
	def __init__(self):
		self.model = sncosmo.Model(source='Hsiao')
	
	def fit_lc(self, band):	
		
		data = simlc().reals(band)
		mod = self.model
		res, fitted_model = sncosmo.fit_lc(data, mod, ['t0'])
		
		return res, fitted_model

		
		


